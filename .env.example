# Provider: 'ollama' for local, 'openai' for cloud
LLM_PROVIDER=ollama

# OpenAI (ignored if LLM_PROVIDER=ollama)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
# OPENAI_URL=https://api.openai.com/v1/chat/completions

# Ollama local settings
OLLAMA_URL=http://localhost:11434/api/chat
# Use the local model you have installed, e.g. 'llama3.1:8b', 'qwen2.5:14b', or your 'gpt-oss:20b'
OLLAMA_MODEL=gpt-oss:20b

# Labels
LABEL_ECOMMERCE=AI_Ecommerce
LABEL_POLITICAL=AI_Political
LABEL_TRIAGED=AI_Triaged

# Gmail query
GMAIL_QUERY=in:inbox newer_than:14d -label:AI_Triaged

# Tuning
MAX_RESULTS=40
SLEEP_SECONDS=0.5
OPENAI_TIMEOUT=45
